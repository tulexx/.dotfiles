#!/usr/bin/env bash

COMMAND=acpi

command -v "${COMMAND}" > /dev/null 2>&1 || (echo "<span color='red'>${COMMAND^^} NOT PRESENT</span>" && exit 1)

message=$(${COMMAND} | awk '{
  gsub(/,/, "");
  gsub(/%/, "");
  message = "";
  status = $3;
  capacity = $4;
  color = "white";
  split($5,split_time,":");
  time = " (" split_time[1] ":" split_time[2] ")"
  if (status == "Full") {
    message = "";
    time = "";
  } else {
    if (status == "Charging")
      message = "  ";

    if (capacity < 10) {
      message = message "  " capacity "%";
      color = "#ff0000";
    } else if (capacity < 40) {
      message = message "  " capacity "%";
      color = "#ffae00";
    } else if (capacity < 60) {
      message = message "  " capacity "%";
      color = "#fff600";
    } else if (capacity < 85) {
      message = message "  " capacity "%";
      color = "#a8ff00";
    } else {
      message = message "  " capacity "%";
    }
  }

  message = message time
  print "<span color=\"" color "\">" message "</span>"
}')

echo "${message}"
